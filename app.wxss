button {
  margin: 0;
}

.btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn {
  border: none;
  height: 60rpx;
  background-color: #d4237a;
  color: #fff;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.section_view {
  width: 690rpx;
  padding-top: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(111, 111, 111, 0.5);
  margin-left: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  justify-content: center;
  overflow: hidden;
}

.top_view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tips_view {
  width: 100%;
  height: 50rpx;
  position: relative;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.line_view {
  width: 100%;
  height: 2rpx; 
  background-color: #efefef;
  top: 24rpx;
  position: absolute;
}

.tips {
  padding: 4rpx 10rpx;
  background-color: #e1e1e1;
  border-radius: 4rpx;
  color: #585858;
  font-size: 26rpx;
  left: 30rpx;
  top: 4rpx;
  position: absolute;
}

.memo_view {
  width: 630rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
}

.memo {
  color: #a0a0a0;
  font-size: 24rpx;
}

.code_btn {
  height: 50rpx;
  font-size: 24rpx;
  color: #d4237a;
  text-align: center;
  line-height: 50rpx;
}

.bottom_view {
  width: 690rpx;
  background-color: #efefef;
}

.bottom_view {
  color: #d4237a;
  font-size: 24rpx;
}

.code_view {
  padding: 10rpx 20rpx;
}