page {
  background-color: #efefef;
}

.page_body {
  width: 100%;
  position: absolute;
  background-color: #efefef;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header text {
  text-align: center;
}

.header image {
  width: 144rpx;
  height: 144rpx;
  margin-top: 80rpx;
}

.header text {
  color: #b0b0b0;
  font-size: 28rpx;
  width: 650rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content_header {
  width: 690rpx;
  font-weight: 500;
  margin-top: 80rpx;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #b0b0b0;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.content image {
  width: 470rpx;
  height: 535rpx;
  margin-top: 50rpx;
}

.content text {
  color: #898989;
  font-size: 28rpx;
  margin: 30rpx 0;
}

.example {
  display: block;
  width: 100%;
  height: 100rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}