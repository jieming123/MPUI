.popup-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.8);
  transition: all .3s ease-out;
  visibility: hidden;
}

.popup-mask-show {
  visibility: visible;
}

.popup {
  width: 100%;
  height: 100%;
  transition: all .3s ease-out;
  position: fixed;
  visibility: hidden;
}

.popup-show {
  visibility: visible;
}

.content-center {
  top: 50%; 
  left: 50%; 
  position: absolute;
  transform: translate(-50%, -50%); 
}

.content-left {
  top: 50%;
  left: 0; 
  transform: translateY(-50%);
  position: absolute;
}

.content-right {
  top: 50%;
  right: 0; 
  transform: translateY(-50%);
  position: absolute;
}

.content-top {
  left: 50%;
  top: 0; 
  transform: translateX(-50%);
  position: absolute;
}

.content-bottom {
  left: 50%;
  bottom: 0; 
  transform: translateX(-50%);
  position: absolute;
}